modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["rustc", "cargo"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Tauri Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "build-and-run"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Tauri Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Tauri App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Tauri Development"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Cross-Platform Server"

[[workflows.workflow]]
name = "Tauri Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd dialog-tool && chmod +x build.bat && ./build.bat && cd .. && npm install && npm run tauri dev"
waitForPort = 5000

[[workflows.workflow]]
name = "build-and-run"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd dialog-tool && build.bat && cd .. && npm install && npm run tauri dev"

[[workflows.workflow]]
name = "Tauri Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx @tauri-apps/cli dev"

[[workflows.workflow]]
name = "Tauri App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run tauri dev"
waitForPort = 1420

[[workflows.workflow]]
name = "Tauri Development"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx @tauri-apps/cli dev"
waitForPort = 1420

[[workflows.workflow]]
name = "Cross-Platform Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node cross-platform-server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd dialog-tool && chmod +x build.bat && ./build.bat && cd .. && npm install && npm run tauri dev"]

[[ports]]
localPort = 1420
externalPort = 80

[[ports]]
localPort = 1421
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000
