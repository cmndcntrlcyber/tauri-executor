{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Tauri Executor",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": true,
        "sidecar": true,
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.example.tauri-executor",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png", 
        "icons/icon.ico"
      ],
      "resources": [
        "binaries/*"
      ],
      "externalBin": [
        "binaries/dialog-tool-x86_64-pc-windows-msvc"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Tauri Executor",
        "width": 800,
        "center": true
      }
    ]
  }
}
